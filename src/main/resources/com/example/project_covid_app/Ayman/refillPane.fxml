<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project_covid_app.Ayman.RefillController"
            prefWidth="750" prefHeight="400">

    <TableView fx:id="tblRefills"
               layoutX="10" layoutY="10"
               prefWidth="730" prefHeight="330">
        <columns>
            <TableColumn text="Req ID"       fx:id="colRefillID"/>
            <TableColumn text="Patient ID"   fx:id="colRefillPatient"/>
            <TableColumn text="Medication"   fx:id="colRefillMed"/>
            <TableColumn text="Request Date" fx:id="colRefillDate"/>
        </columns>
    </TableView>

    <Button text="Process Refill"
            layoutX="320" layoutY="350"
            onAction="#onProcessRefill"/>

</AnchorPane>
