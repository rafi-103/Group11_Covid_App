<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project_covid_app.Ayman.TransactionHistoryController"
            prefWidth="750" prefHeight="400">

    <TableView fx:id="tblTransactions"
               layoutX="10" layoutY="10"
               prefWidth="730" prefHeight="330">
        <columns>
            <TableColumn text="Trans ID"  fx:id="colTransID"/>
            <TableColumn text="Date/Time" fx:id="colTransTime"/>
            <TableColumn text="Type"      fx:id="colTransType"/>
        </columns>
    </TableView>

    <Button text="Export History"
            layoutX="320" layoutY="350"
            onAction="#onExportHistory"/>

</AnchorPane>
